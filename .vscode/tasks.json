{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "pytest",
      "args": ["-v", "tests/"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Benchmarks",
      "type": "shell",
      "command": "python",
      "args": ["scripts/benchmark/run_benchmarks.py"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Format Code",
      "type": "shell",
      "command": "black",
      "args": ["src/", "tests/"],
      "problemMatcher": []
    },
    {
      "label": "Lint Code",
      "type": "shell",
      "command": "pylint",
      "args": ["src/"],
      "problemMatcher": []
    },
    {
      "label": "Build C++ Kernels",
      "type": "shell",
      "command": "mkdir -p build && cd build && cmake .. && make",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
