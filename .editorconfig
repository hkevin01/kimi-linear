root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyx}]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{cpp,c,h,cu,cuh}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.java]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json,md}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
